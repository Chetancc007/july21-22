<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Webkul\ProductTableAttribute\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Webkul\ProductTableAttribute\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">customLogHandler</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Webkul\ProductTableAttribute\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <preference for="Webkul\ProductTableAttribute\Api\Data\ProductTableAttributeInterface" type="Webkul\ProductTableAttribute\Model\ProductTableAttribute" />
    <preference for="Webkul\ProductTableAttribute\Api\ProductTableAttributeRepositoryInterface" type="Webkul\ProductTableAttribute\Model\ProductTableAttributeRepository" />

    <preference for="Webkul\ProductTableAttribute\Api\Data\ProductTableAttributeOptionsInterface" type="Webkul\ProductTableAttribute\Model\ProductTableAttributeOptions" />
    <preference for="Webkul\ProductTableAttribute\Api\ProductTableAttributeOptionsRepositoryInterface" type="Webkul\ProductTableAttribute\Model\ProductTableAttributeOptionsRepository" />
</config>
