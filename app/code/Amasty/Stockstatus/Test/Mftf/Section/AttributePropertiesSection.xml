<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AttributePropertiesSection">
        <element name="tabProperties" type="button" selector="li a[id='product_attribute_tabs_main']"/>
        <element name="dropdownLastOptionTitle" type="textarea" selector="tbody[data-role='options-container'] tr:nth-last-child(1) td:nth-child(3) input"/>
        <element name="dropdownLastOptionTitleValue" type="textarea" selector="tbody[data-role='options-container'] tr:nth-last-child(1) td:nth-child(3) input[value='{{option_name}}']" parameterized="true" />
        <element name="dropdownLastOptionDelete" type="button" selector="tbody[data-role='options-container'] tr:nth-last-child(1) button[title='Delete']"/>
        <element name="tabManageIcons" type="button" selector="li a[id='product_attribute_tabs_icons']"/>
        <element name="lastAddedOptionTitle" type="block" selector="table[id='icons_table'] tr:nth-last-child(1) td:nth-child(1)"/>
        <element name="lastAddedOptionImage" type="file" selector="table[id='icons_table'] tr:nth-last-child(1) td:nth-child(3) input"/>
        <element name="tabQuantityRangeStatuses" type="button" selector="li a[id='product_attribute_tabs_ranges']"/>
        <element name="addNewRange" type="button" selector="button[class*=add-new-range]"/>
        <element name="lastRangeFromField" type="text" selector="tbody[id='ranges_table_body'] tr:nth-last-child(1) td:nth-child(1) input[class='input-text']"/>
        <element name="lastRangeToField" type="text" selector="tbody[id='ranges_table_body'] tr:nth-last-child(1) td:nth-child(2) input[class='input-text']"/>
        <element name="lastRangeStockStatus" type="select" selector="tbody[id='ranges_table_body'] tr:nth-last-child(1) td:nth-child(3) select"/>
        <element name="lastRangeProductGroup" type="select" selector="tbody[id='ranges_table_body'] tr:nth-last-child(1) td:nth-child(4) select"/>
        <element name="lastRangeDelete" type="button" selector="tbody[id='ranges_table_body'] tr:nth-last-child(1) td:nth-child(5) button"/>
    </section>
</sections>
