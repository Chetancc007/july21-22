<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontAmastyCheckChangeStatusSimpleProductTest">
        <annotations>
            <title value="Check custom stock status based on qty of products."/>
            <description value="Set module's configuration and attributes. Set qty ranges. Status switching check."/>
            <testCaseId value="CSS-7"/>
            <severity value="CRITICAL"/>
            <group value="Stockstatus"/>
        </annotations>
        <before>
            <createData entity="SimpleProductA1" stepKey="createSimpleProductA1"/>
        </before>
        <after>
            <deleteData stepKey="deleteSimpleProductA1" createDataKey="createSimpleProductA1"/>
            <actionGroup ref="OpenProductAttributeFromSearchResultInGridActionGroup" stepKey="openProductAttribute4">
                <argument name="productAttributeCode" value="custom_stock_status"/>
            </actionGroup>
            <actionGroup ref="AdminAmastyDeleteStockStatusOptionActionGroup" stepKey="deleteAddedOption1">
                <argument name="am_test_option" value="amastySecondOption"/>
            </actionGroup>
            <click selector="{{AdminMainActionsSection.saveAndEdit}}" stepKey="saveAndContinueEdit"/>
            <actionGroup ref="AdminAmastyDeleteStockStatusOptionActionGroup" stepKey="deleteAddedOption2">
                <argument name="am_test_option" value="amastyFirstOption"/>
            </actionGroup>
            <actionGroup ref="ClickSaveButtonActionGroup" stepKey="clickSaveAttributeAfterDelete">
                <argument name="message" value="You saved the product attribute."/>
            </actionGroup>
            <actionGroup ref="OpenProductAttributeFromSearchResultInGridActionGroup" stepKey="openProductAttribute5">
                <argument name="productAttributeCode" value="custom_stock_status_qty_rule"/>
            </actionGroup>
            <actionGroup ref="AdminAmastyDeleteProductGroupOptionActionGroup" stepKey="deleteAddedOptionA1">
                <argument name="am_test_group" value="productGroupA1"/>
            </actionGroup>
            <actionGroup ref="ClickSaveButtonActionGroup" stepKey="clickSaveProductGroupAttributeAfterDelete">
                <argument name="message" value="You saved the product attribute."/>
            </actionGroup>
            <magentoCLI command="config:set amstockstatus/general/use_range_rules 0" stepKey="configDontUseProductGroups"/>
        </after>

        <magentoCLI command="cache:clean" stepKey="cacheClean"/>
        <magentoCLI command="config:set amstockstatus/general/use_range_rules 1" stepKey="configUseProductGroups"/>
        <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
        <actionGroup ref="OpenProductAttributeFromSearchResultInGridActionGroup" stepKey="openProductAttribute1">
            <argument name="productAttributeCode" value="custom_stock_status"/>
        </actionGroup>
        <actionGroup ref="AdminAmastyAddStockStatusOptionActionGroup" stepKey="addNewOption1">
            <argument name="am_test_option" value="amastyFirstOption"/>
        </actionGroup>
        <actionGroup ref="AdminAmastyAddStockStatusOptionActionGroup" stepKey="addNewOption2">
            <argument name="am_test_option" value="amastySecondOption"/>
        </actionGroup>
        <actionGroup ref="ClickSaveButtonActionGroup" stepKey="clickSaveAttribute">
            <argument name="message" value="You saved the product attribute."/>
        </actionGroup>
        <actionGroup ref="OpenProductAttributeFromSearchResultInGridActionGroup" stepKey="openProductAttribute2">
            <argument name="productAttributeCode" value="custom_stock_status_qty_rule"/>
        </actionGroup>
        <actionGroup ref="AdminAmastyAddProductGroupOptionActionGroup" stepKey="addFirstProductGroupOption">
            <argument name="am_test_group" value="productGroupA1"/>
        </actionGroup>
        <actionGroup ref="ClickSaveButtonActionGroup" stepKey="clickSaveProductGroupAttribute">
            <argument name="message" value="You saved the product attribute."/>
        </actionGroup>
        <actionGroup ref="OpenProductAttributeFromSearchResultInGridActionGroup" stepKey="openProductAttribute3">
            <argument name="productAttributeCode" value="custom_stock_status"/>
        </actionGroup>
        <actionGroup ref="AdminAmastySetRangeForStockStatusActionGroup" stepKey="setFirstRule">
            <argument name="am_test_option" value="amastyFirstOption"/>
            <argument name="am_test_group" value="productGroupA1"/>
        </actionGroup>
        <actionGroup ref="AdminAmastySetSecondRangeForStockStatusActionGroup" stepKey="setSecondRule">
            <argument name="am_test_option" value="amastySecondOption"/>
            <argument name="am_test_group" value="productGroupA1"/>
        </actionGroup>
        <actionGroup ref="ClickSaveButtonActionGroup" stepKey="clickSaveStockStatusAttributeAfterSetRules">
            <argument name="message" value="You saved the product attribute."/>
        </actionGroup>
        <amOnPage url="{{AdminProductEditPage.url($createSimpleProductA1.id$)}}" stepKey="goToEditSimpleProductA1"/>
        <waitForAjaxLoad stepKey="waitForAjaxLoadProductA1EditPage"/>
        <actionGroup ref="AdminAmastyAssignProductGroupActionGroup" stepKey="setProductGroupToCreatedProductA1">
            <argument name="am_test_group" value="productGroupA1"/>
        </actionGroup>
        <actionGroup ref="saveProductForm" stepKey="saveProductA1"/>
        <actionGroup ref="OpenStoreFrontProductPageActionGroup" stepKey="goToTheProductA1">
            <argument name="productUrlKey" value="$createSimpleProductA1.custom_attributes[url_key]$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAmastyCheckStockStatusActionGroup" stepKey="verifyStockStatusProduct1">
            <argument name="productName" value="$$createSimpleProductA1.name$$"/>
            <argument name="am_test_option" value="amastyFirstOption"/>
        </actionGroup>
        <actionGroup ref="StorefrontAddToTheCartActionGroup" stepKey="addTheProductToTheCart"/>
        <!-- check the cart -->
        <amOnPage url="/checkout/cart/" stepKey="amOnShoppingCartPage"/>
        <actionGroup ref="StorefrontOpenCheckoutPageActionGroup" stepKey="toGoTheCheckout"/>
        <actionGroup ref="FillGuestCheckoutShippingAddressWithCountryActionGroup" stepKey="fillInTheAddress">
            <argument name="customerAddress" value="UK_Not_Default_Address"/>
        </actionGroup>
        <actionGroup ref="CheckoutSelectFlatRateShippingMethodActionGroup" stepKey="selectFlatRate"/>
        <click selector="{{CheckoutShippingSection.next}}" stepKey="clickNext"/>
        <actionGroup ref="ClickPlaceOrderActionGroup" stepKey="placeOrder"/>
        <magentoCLI command="cache:clean" stepKey="cacheClean2"/>
        <actionGroup ref="OpenStoreFrontProductPageActionGroup" stepKey="goToTheProduct2">
            <argument name="productUrlKey" value="$createSimpleProductA1.custom_attributes[url_key]$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAmastyCheckStockStatusActionGroup" stepKey="verifyStockStatusProduct2">
            <argument name="productName" value="$$createSimpleProductA1.name$$"/>
            <argument name="am_test_option" value="amastySecondOption"/>
        </actionGroup>
    </test>
</tests>
