<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAmastyCheckStockStatusActionGroup">
        <arguments>
            <argument name="am_test_option"/>
            <argument name="productName" type="string"/>
        </arguments>
        <see selector="{{StorefrontProductInfoMainSection.productName}}" userInput="{{productName}}" stepKey="seeProductName"/>
        <dontSee selector="{{StorefrontProductInfoMainSection.stock}}" stepKey="dontSeeDefaultStock"/>
        <see selector="{{StorefrontProductInfoMainSection.textCustomStockStatus}}" userInput="{{am_test_option.option_name}}" stepKey="seeTextCustomStockStatus"/>
    </actionGroup>

    <actionGroup name="StorefrontAmastyCheckNoStockStatusActionGroup">
        <arguments>
            <argument name="am_test_option"/>
            <argument name="productName" type="string"/>
        </arguments>
        <see selector="{{StorefrontProductInfoMainSection.productName}}" userInput="{{productName}}" stepKey="seeProductName"/>
        <dontSee selector="{{StorefrontProductInfoMainSection.textCustomStockStatus}}" userInput="{{am_test_option.option_name}}" stepKey="dontSeeCustomStockStatus"/>
    </actionGroup>

    <actionGroup name="StorefrontAmastyCheckStockStatusWithoutDefaultActionGroup">
        <arguments>
            <argument name="am_test_option"/>
            <argument name="productName" type="string"/>
        </arguments>
        <see selector="{{StorefrontProductInfoMainSection.productName}}" userInput="{{productName}}" stepKey="seeProductName"/>
        <dontSee selector="{{StorefrontProductInfoMainSection.stock}}" stepKey="dontSeeDefaultStock"/>
        <see selector="{{StorefrontProductInfoMainSection.textCustomStockStatus}}" userInput="{{am_test_option.option_name}}" stepKey="seeTextCustomStockStatus"/>
    </actionGroup>

    <actionGroup name="StorefrontAmastyCheckStockStatusWithDefaultActionGroup">
        <arguments>
            <argument name="am_test_option"/>
            <argument name="productName" type="string"/>
        </arguments>
        <see selector="{{StorefrontProductInfoMainSection.productName}}" userInput="{{productName}}" stepKey="seeProductName"/>
        <see selector="{{StorefrontProductInfoMainSection.textCustomStockStatus}}" userInput="{{am_test_option.option_name}}" stepKey="seeTextCustomStockStatus"/>
        <see selector="{{StorefrontProductInfoMainSection.textDefaultStockStatus}}" userInput="In Stock" stepKey="seeTextDefaultStockStatus"/>
    </actionGroup>

    <actionGroup name="StorefrontAmastyCheckStockStatusOnlyImageActionGroup">
        <arguments>
            <argument name="am_test_option"/>
        </arguments>
        <dontSee selector="{{StorefrontProductInfoMainSection.textCustomStockStatus}}" userInput="{{am_test_option.option_name}}" stepKey="dontSeeCustomStockStatus"/>
        <seeElement selector="{{StorefrontProductInfoMainSection.imageCustomStockStatus(am_test_option.option_name)}}" stepKey="seeImageStockStatus"/>
    </actionGroup>

    <actionGroup name="StorefrontAmastyCheckStockStatusOnlyTextActionGroup">
        <arguments>
            <argument name="am_test_option"/>
        </arguments>
        <see selector="{{StorefrontProductInfoMainSection.textCustomStockStatus}}" userInput="{{am_test_option.option_name}}" stepKey="seeCustomStockStatus"/>
    </actionGroup>
</actionGroups>