<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAmastyAssignStockStatusActionGroup">
        <arguments>
            <argument name="am_test_option"/>
        </arguments>
        <seeElement selector="{{AdminProductFormSection.newAddedAttribute('custom_stock_status')}}" stepKey="checkCustomStockStatusAttribute"/>
        <click selector="{{AdminProductFormSection.bulkCustomStockStatus(am_test_option.option_name)}}" stepKey="setStockStatus"/>
    </actionGroup>

    <actionGroup name="AdminAmastyAssignProductGroupActionGroup">
        <arguments>
            <argument name="am_test_group"/>
        </arguments>
        <seeElement selector="{{AdminProductFormSection.toggleUseQtyRanges}}" stepKey="checkQtyRangesAttribute"/>
        <checkOption selector="{{AdminProductFormSection.toggleUseQtyRanges}}" stepKey="setUseQtyRanges"/>
        <seeElement selector="{{AdminProductFormSection.productGroupAttribute}}" stepKey="checkProductGroupAttribute"/>
        <click selector="{{AdminProductFormSection.bulkCustomStockStatus(am_test_group.group_name)}}" stepKey="setProductGroup"/>
    </actionGroup>
</actionGroups>