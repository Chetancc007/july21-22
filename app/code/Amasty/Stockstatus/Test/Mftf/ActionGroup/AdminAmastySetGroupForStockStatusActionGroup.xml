<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAmastySetRangeForStockStatusActionGroup">
        <arguments>
            <argument name="am_test_option"/>
            <argument name="am_test_group"/>
        </arguments>
        <click selector="{{AttributePropertiesSection.tabQuantityRangeStatuses}}" stepKey="openQuantityRangeTab"/>
        <click selector="{{AttributePropertiesSection.addNewRange}}" stepKey="clickAddNewRangeButton"/>
        <fillField userInput="100" selector="{{AttributePropertiesSection.lastRangeFromField}}" stepKey="fillFromField"/>
        <fillField userInput="101" selector="{{AttributePropertiesSection.lastRangeToField}}" stepKey="fillToField"/>
        <selectOption userInput="{{am_test_option.option_name}}" selector="{{AttributePropertiesSection.lastRangeStockStatus}}" stepKey="selectStockStatusOption"/>
        <selectOption userInput="{{am_test_group.group_name}}" selector="{{AttributePropertiesSection.lastRangeProductGroup}}" stepKey="selectProductGroupOption"/>
    </actionGroup>

    <actionGroup name="AdminAmastySetSecondRangeForStockStatusActionGroup">
        <arguments>
            <argument name="am_test_option"/>
            <argument name="am_test_group"/>
        </arguments>
        <click selector="{{AttributePropertiesSection.tabQuantityRangeStatuses}}" stepKey="openQuantityRangeTab"/>
        <click selector="{{AttributePropertiesSection.addNewRange}}" stepKey="clickAddNewRangeButton"/>
        <fillField userInput="0" selector="{{AttributePropertiesSection.lastRangeFromField}}" stepKey="fillFromField"/>
        <fillField userInput="99" selector="{{AttributePropertiesSection.lastRangeToField}}" stepKey="fillToField"/>
        <selectOption userInput="{{am_test_option.option_name}}" selector="{{AttributePropertiesSection.lastRangeStockStatus}}" stepKey="selectStockStatusOption"/>
        <selectOption userInput="{{am_test_group.group_name}}" selector="{{AttributePropertiesSection.lastRangeProductGroup}}" stepKey="selectProductGroupOption"/>
    </actionGroup>
</actionGroups>