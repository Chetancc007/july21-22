<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Mageplaza\SaveCart\Block\Link" name="save-cart-link" after="wish-list-link">
                <arguments>
                    <argument name="sortOrder" xsi:type="number">60</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="footer_links">
            <block class="Mageplaza\SaveCart\Block\View\Element\Html\Link" name="mpsavecart.footer_links" template="Mageplaza_SaveCart::view/footer-links.phtml" after="-"/>
        </referenceBlock>
        <referenceBlock name="minicart">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="minicart_content" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="promotion" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="mp_savecart" xsi:type="array">
                                            <item name="component" xsi:type="string">Mageplaza_SaveCart/js/view/minicart</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
