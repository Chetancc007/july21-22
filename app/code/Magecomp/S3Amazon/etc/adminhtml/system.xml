<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magecomp" translate="label" sortOrder="100" class="magecomp-logo">
            <label><![CDATA[]]></label>
        </tab>
		<section id="s3amazon" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>S3 Amazon</label>
            <tab>magecomp</tab>
            <resource>Magecomp_S3Amazon::config_s3amazon</resource>
			<group id="general" translate="label"  sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Allowed File to save on Amazon</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="twilionote" type="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>NOTE</label>
                    <comment><![CDATA[<strong>Run 'composer require aws/aws-sdk-php' from CLI to use Amazon S3.</strong>]]></comment>
                    <depends><field id="enable">1</field></depends>
                </field>
                <field id="access_key" translate="label comment" type="password" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Access Key</label>
                    <validate>required-entry</validate>
                    <depends><field id="enable">1</field></depends>
                </field>
                <field id="secret_key" translate="label comment" type="password" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Secret Key</label>
                    <validate>required-entry</validate>
                    <depends><field id="enable">1</field></depends>
                </field>
                <field id="bucket" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Bucket</label>
                    <validate>required-entry</validate>
                    <depends><field id="enable">1</field></depends>
                </field>
                <field id="region" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Region</label>
                    <validate>required-entry</validate>
                    <source_model>Magecomp\S3Amazon\Model\Config\Region</source_model>
                    <depends><field id="enable">1</field></depends>
                </field>
                <field id="check" translate="label comment" type="button" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <frontend_model>Magecomp\S3Amazon\Block\System\Config\Form\Button</frontend_model>
                    <depends><field id="enable">1</field></depends>
                </field>
                <field id="checkbox" translate="label comment" type="checkbox" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <frontend_model>Magecomp\S3Amazon\Block\System\Config\Form\Checkbox</frontend_model>
                    <validate>required-entry</validate>
                    <depends><field id="enable">1</field></depends>
                </field>
                <field id="request_timeout" translate="label comment" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Request Timeout</label>
                    <validate>required-entry</validate>
                    <depends><field id="enable">1</field></depends>
                    <comment><![CDATA[A unique, time-sensitive, URL is generated every time a customer attempts to download a file.  This value indicates the number of seconds for which you'd like the generated URL to be valid.]]></comment>
                </field>
                <field id="prefix" translate="label comment" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Prefix</label>
                    <depends><field id="enable">1</field></depends>
                </field>
                <field id="custom_endpoint_enabled" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Custom Endpoint</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends><field id="enable">1</field></depends>
                    <comment><![CDATA[Turn this on if you want to use a custom S3-compatible endpoint instead, e.g. DreamHost or Digital Ocean.]]></comment>
                </field>
                <field id="custom_endpoint" translate="label comment" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Custom Endpoint</label>
                    <depends>
                        <field id="enable">1</field>
                        <field id="custom_endpoint_enabled">1</field>
                    </depends>
                    <comment><![CDATA[Don't include the http:// or https:// prefix.]]></comment>
                </field>
                <field id="custom_headers" translate="label" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Custom Headers</label>
                    <frontend_model>Magecomp\S3Amazon\Block\System\Config\Form\Headers</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                    <depends><field id="enable">1</field></depends>
                </field>
            </group>
		</section>
	</system>
</config>