<page layout="2columns-right" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <container name="div.pre-purchase-logo" htmlTag="div" htmlClass="pre-purchase-logo-blk">
                <block class="Magento\Framework\View\Element\Text">
                    <arguments>
                        <argument name="text" xsi:type="string"><![CDATA[&nbsp;]]></argument>
                    </arguments>
                </block>
            </container>
        </referenceBlock>

        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\View" name="test.tab" template="Magento_Catalog::html/vehiclefitment.phtml" group="detailed_info" >
                <arguments>
                <argument translate="true" name="title" xsi:type="string">Vehicle Fitment Data</argument>
                </arguments>
            </block>
        </referenceBlock>
        <block class="Magento\Catalog\Block\Product\View\Gallery" name="theme.miniprepurchaselogo" template="Magento_Catalog::html/prepurchase.phtml" />
        <move element="theme.miniprepurchaselogo" destination="page.main.title" before="-" />
        <move element="vehiclefitment.tab" destination="product.info.detailstabs" after="-" />

    </body>
</page>